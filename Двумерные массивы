/* №1*/ 

      let m = new Array();
      let n = prompt("Размер массива N");
      for(let i = 0; i < n; i++){
      m[i] = new Array();
      for(let j = 0; j < n; j++){
          m[i][j] = prompt(i+"  "+j);
        }
      }

      for(let i=0; i<n; i++){
        for(let j = 0; j< n; j++){
          document.write(m[i][j]+" ");
        }
        document.write("<br>");
      }
       let result = 1;
      for(let j = 0; j<n; j++){
        for(let i = 0; i< n; i++){
          result*= m[i][j];
        }
        document.write(" Произведение " +j+" столбца " + result);
        result = 1;
        document.write("<br>");
      }

