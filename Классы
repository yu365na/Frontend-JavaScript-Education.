    /* №2 */

    class Employee{
      constructor(firstName, lastName, rate, worskDays){
        this.firstName = firstName;
        this.lastName = lastName;
        this.rate = rate;
        this.worskDays = worskDays;

      }

      getSalary(){
        return this.rate * this.worskDays;

      }
    }
    person1 = new Employee("Андрей", "Иванов", 7000, 20);
    alert(person1.getSalary()+ "рублей");



